<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<HBox maxWidth="1.7976931348623157E308" prefHeight="0.0" spacing="5" styleClass="recipe-line" stylesheets="/styles/editable-item.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.ShoppingListElementCtrl">

    <children>
      <HBox fx:id="defaultView" prefHeight="100.0" prefWidth="200.0">
         <children>
              <Label fx:id="textLabel" cacheShape="false" maxWidth="1.7976931348623157E308" prefHeight="30.0" text="- 100g foo " visible="false" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets left="5.0" right="5.0" top="2.0" />
               </HBox.margin>
            </Label>
            <Button fx:id="editButton" minHeight="30.0" minWidth="30.0" onAction="#onEditClicked" prefHeight="30.0" prefWidth="30.0" styleClass="action-button" stylesheets="/styles/action-button.css" text="✏" textFill="#2f06ff">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <Button fx:id="deleteButton" minHeight="30.0" minWidth="30.0" onAction="#onDeleteClicked" prefHeight="30.0" prefWidth="30.0" styleClass="action-button" stylesheets="/styles/action-button.css" text="❌" textFill="#f70707">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
         </children>
      </HBox>
      <HBox fx:id="editView" prefHeight="100.0" prefWidth="200.0" HBox.hgrow="NEVER">
         <children>
      
                    <TextField fx:id="amountField" maxWidth="1.7976931348623157E308" minWidth="70.0" prefHeight="30.0" promptText="Enter amount" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets right="5.0" top="2.0" />
               </HBox.margin>
            </TextField>
            <ComboBox fx:id="unitComboBox" maxWidth="90.0" minWidth="90.0" prefHeight="30.0" prefWidth="90.0" promptText="unit">
               <HBox.margin>
                  <Insets right="15.0" top="2.0" />
               </HBox.margin>
            </ComboBox>
            <ComboBox fx:id="ingredientComboBox" minWidth="100.0" prefHeight="30.0" prefWidth="150.0" promptText="ingredient">
               <HBox.margin>
                  <Insets right="10.0" top="2.0" />
               </HBox.margin>
            </ComboBox>
              <Button fx:id="confirmButton" minHeight="30.0" minWidth="30.0" onAction="#onConfirmClicked" prefHeight="30.0" prefWidth="30.0" styleClass="action-button" stylesheets="/styles/action-button.css" text="✔" textFill="LIME">
               <font>
                  <Font size="16.0" />
               </font>
               <HBox.margin>
                  <Insets right="2.0" top="2.0" />
               </HBox.margin>
            </Button>
              <Button fx:id="cancelButton" minHeight="30.0" minWidth="30.0" onAction="#onCancelClicked" prefHeight="30.0" prefWidth="30.0" styleClass="action-button" stylesheets="/styles/action-button.css" text="❌" textFill="#f70707">
               <font>
                  <Font size="16.0" />
               </font>
               <HBox.margin>
                  <Insets top="2.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
    </children>
   <padding>
      <Insets bottom="2.0" left="2.0" right="2.0" top="8.0" />
   </padding>
</HBox>
