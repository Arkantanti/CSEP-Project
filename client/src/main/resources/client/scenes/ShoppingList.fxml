<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="700.0" maxWidth="412.0" minHeight="200.0" minWidth="412.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.ShoppingListCtrl">
   <bottom>
      <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <items>
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#clear" text="Clear" />
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#print" text="Print" />
         </items>
      </ToolBar>
   </bottom>
   <center>
      <ScrollPane hbarPolicy="NEVER" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <content>
            <VBox minWidth="500.0" prefHeight="200.0" prefWidth="500.0">
               <children>
                  <VBox fx:id="ingredientListBox" minWidth="300.0" />
                  <Button minHeight="35.0" minWidth="40.0" mnemonicParsing="false" onAction="#onAddShoppingListElement" prefHeight="35.0" prefWidth="40.0" styleClass="add-button" text="+">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
         </content>
      </ScrollPane>
   </center>
</BorderPane>
